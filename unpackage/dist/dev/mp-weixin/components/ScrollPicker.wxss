/* 水平间距 */
.scroll-picker {
  width: 100%;
  height: 100%;
  background-color: transparent;
}
.scroll-picker .picker-title {
  text-align: center;
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}
.scroll-picker .picker-columns {
  position: relative;
  height: 100%;
  overflow: hidden;
}
.scroll-picker .picker-view {
  width: 100%;
  height: 100%;
}
.scroll-picker .picker-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 66px;
  font-size: 43px;
  color: #333;
}
.scroll-picker .picker-item.selected {
  color: #000;
  font-weight: bold;
}
.scroll-picker .picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.6) 15%, rgba(255, 255, 255, 0) 30%, rgba(255, 255, 255, 0) 70%, rgba(255, 255, 255, 0.6) 85%, rgba(255, 255, 255, 0.95) 100%);
  pointer-events: none;
}
.scroll-picker .picker-indicator {
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 132rpx;
  pointer-events: none;
}
.scroll-picker .picker-indicator::before, .scroll-picker .picker-indicator::after {
  border: none;
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  height: 12rpx;
}
.scroll-picker .picker-indicator::before {
  top: 0;
}
.scroll-picker .picker-indicator::after {
  bottom: 0;
}
 .uni-picker-view-indicator {
  height: 88rpx !important;
  border: none !important;
}
 .uni-picker-view-mask {
  background-size: 100% 88rpx;
}