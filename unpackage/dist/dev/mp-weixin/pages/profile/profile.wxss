/* 水平间距 */
.profile-edit-page {
  background-color: #f4f8fb;
  min-height: 100vh;
  padding-top: 1px;
}
.profile-edit-page .section {
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.profile-edit-page .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.profile-edit-page .list-item:last-child {
  border-bottom: none;
}
.profile-edit-page .label {
  font-size: 32rpx;
  color: #333;
}
.profile-edit-page .value {
  font-size: 32rpx;
  color: #999;
}
.profile-edit-page .arrow {
  font-size: 18rpx;
  color: #ccc;
}
.profile-edit-page .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.profile-edit-page .info-note {
  font-size: 24rpx;
  color: #666;
  margin: 30rpx 24rpx;
  text-align: left;
}
.get-phone-btn {
  background: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  border: none;
  outline: none;
}
.get-phone-btn::after {
  border: none;
}
.get-phone-btn .value {
  font-size: 32rpx;
  color: #999;
}