/* 水平间距 */
.settings-page {
  background-color: #f9f9f9;
  min-height: 100vh;
  padding-top: 1px;
}
.settings-page .section {
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 8px;
  overflow: hidden;
}
.settings-page .section.profile {
  margin-top: 19rpx;
}
.settings-page .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.settings-page .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.settings-page .list-item.profile {
  padding: 40rpx 30rpx;
}
.settings-page .list-item:last-child {
  border-bottom: none;
}
.settings-page .label {
  font-size: 32rpx;
  color: #333;
}
.settings-page .value-container {
  display: flex;
  align-items: center;
}
.settings-page .value {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}
.settings-page .arrow {
  font-size: 32rpx;
  color: #ccc;
}
.settings-page .delete-account {
  text-align: center;
}
.settings-page .delete-account .label {
  color: #ff4d4f;
}
.settings-page .logout {
  margin-top: 30rpx;
  text-align: center;
}
.settings-page .logout-button {
  background-color: #fff;
  color: #18191d;
  padding: 20rpx 20rpx;
  border-radius: 5px;
  font-size: 32rpx;
  margin: 60rpx 30rpx;
}
.settings-page button::after {
  border: none;
}