
.container {
	padding: 20px;
}
.status-box,
.token-box,
.user-box {
	margin-bottom: 20px;
	padding: 15px;
	border-radius: 8px;
	background-color: #f8f8f8;
}
.label {
	font-weight: bold;
	margin-right: 10px;
}
.status {
	padding: 4px 8px;
	border-radius: 4px;
}
.status.success {
	background-color: #e8f5e9;
	color: #2e7d32;
}
.status.default {
	background-color: #f5f5f5;
	color: #757575;
}
.token {
	word-break: break-all;
	font-family: monospace;
	font-size: 12px;
}
.info {
	white-space: pre-wrap;
	font-family: monospace;
	font-size: 12px;
}
.btn {
	margin: 20px 0;
	background-color: #007aff;
	color: white;
}
.info-btn {
	background-color: #4caf50;
}
