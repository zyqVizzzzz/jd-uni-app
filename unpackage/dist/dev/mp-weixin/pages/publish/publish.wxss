/* 水平间距 */
.publish-page {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}
.content-input {
  width: 100%;
  padding: 80rpx 30rpx;
  min-height: 300rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.image-grid {
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}
.grid-item {
  width: calc((100% - 30rpx) / 3);
  height: 0;
  padding-bottom: calc((100% - 30rpx) / 3);
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}
.grid-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.add-image {
  border: 2rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-image .plus {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  color: #999;
}
.publish-footer {
  margin-top: auto;
  padding: 20rpx 30rpx 80rpx;
  background: #ffffff;
}
.publish-btn {
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  background: #ffd100;
  color: #000000;
  font-size: 32rpx;
  border-radius: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.publish-btn::after {
  border: none;
}
.camera-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  position: relative;
  top: -2rpx;
}
.publish-btn[disabled] {
  opacity: 0.8;
}